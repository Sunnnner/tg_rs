{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "telegram_rendering",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": true,
        "execute": true,
        "sidecar": true,
        "open": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "http://**",
          "https://**"
        ]
      },
      "fs": {
        "all": true,
        "scope": ["$RESOURCE/*", "*"]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true, 
        "open": true
      }
    },
    "windows": [
      {
        "title": "telegram翻译",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src data: filesystem: ws: http: https: 'unsafe-eval' 'unsafe-inline'"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "rustcc.com.cn",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "py/*"
      ],
      "externalBin": []

    }
  }
}
